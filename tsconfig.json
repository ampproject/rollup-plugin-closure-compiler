{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2017",
    ],
    "outDir": "transpile",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*.ts"
  ]
}