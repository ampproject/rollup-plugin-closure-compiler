{
  "name": "@ampproject/rollup-plugin-closure-compiler",
  "version": "0.13.0",
  "description": "Rollup + Google Closure Compiler",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/rollup-plugin-closure-compiler.git"
  },
  "author": "The AMP HTML Authors",
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "rollup-plugin"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "rimraf dist transpile && tsc -p tsconfig.test.json & wait",
    "test": "ava",
    "build": "rimraf dist transpile && tsc -p tsconfig.json & wait",
    "postbuild": "rollup --config rollup.config.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "release": "np",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "rollup": ">= 0.67.4"
  },
  "dependencies": {
    "acorn": "7.1.0",
    "acorn-dynamic-import": "4.0.0",
    "acorn-walk": "7.0.0",
    "google-closure-compiler": "20191111.0.0",
    "magic-string": "0.25.4",
    "temp-write": "4.0.0"
  },
  "devDependencies": {
    "@types/acorn": "4.0.5",
    "@types/estree": "0.0.39",
    "@types/node": "12.12.11",
    "@types/temp-write": "3.3.0",
    "ava": "2.4.0",
    "builtins": "2.0.1",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "np": "5.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "rollup": "0.67.4",
    "rollup-plugin-copy": "3.1.0",
    "tslint": "5.20.1",
    "typescript": "3.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test && npm run build",
      "pre-commit": "lint-staged"
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "verbose": true
  },
  "volta": {
    "node": "12.13.1",
    "yarn": "1.21.0"
  }
}
