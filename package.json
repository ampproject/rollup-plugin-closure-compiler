{
  "name": "@ampproject/rollup-plugin-closure-compiler",
  "version": "0.7.3",
  "description": "Rollup + Google Closure Compiler",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/rollup-plugin-closure-compiler.git"
  },
  "author": "The AMP HTML Authors",
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "rollup-plugin"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "rimraf dist transpile && tsc -p tsconfig.test.json & wait",
    "test": "ava -v test/**/*.js",
    "build": "rimraf dist transpile && tsc -p tsconfig.json & wait",
    "postbuild": "rollup --config rollup.config.js",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "peerDependencies": {
    "rollup": ">= 0.66.1"
  },
  "dependencies": {
    "acorn": "6.0.2",
    "acorn-dynamic-import": "4.0.0",
    "acorn-walk": "6.1.0",
    "google-closure-compiler": "20180910.1.0",
    "magic-string": "0.25.1",
    "temp-write": "3.4.0"
  },
  "devDependencies": {
    "@types/acorn": "4.0.3",
    "@types/estree": "0.0.39",
    "@types/temp-write": "3.3.0",
    "ava": "1.0.0-rc.1",
    "builtins": "2.0.0",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "tslint": "5.11.0",
    "typescript": "3.1.3"
  },
  "files": [
    "dist/index.js",
    "dist/index.mjs"
  ],
  "lint-staged": {
    "*.ts": [
      "npm run lint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test && npm run build",
      "pre-commit": "lint-staged"
    }
  }
}
